<div class="col-12">
  <div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">User Table</h6>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>
            <th scope="col">Block Status</th>
            <th scope="col">Action</th>

          </tr>
        </thead>
        <tbody>
          {{#each userData}}
          <tr>
            <ul>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td>{{this.mobile}}</td>
              <td>{{this.is_blocked}}</td>
              {{#if  this.is_blocked}} 
  
              <td><a class="btn btn-success" href="/admin/unblockUser?id={{this._id}}">Unblock </a></td>
              {{else}}
          
              <td><a class="btn btn-danger" href="/admin/blockUser?id={{this._id}}">Block </a></td>
              {{/if}}
            </ul>

          </tr>
          {{/each}}

        </tbody>
      </table>
    </div>
