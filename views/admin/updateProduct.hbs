    <div class="container">
        <div class="row ">
            <div class="col-lg-3 col-md-3 login-box"></div>
            <div class="col-lg-6 col-md-8 login-box">

                <h2><span class="px-2">EDIT PRODUCT</span></h2>

                <form action="/admin/updateProduct/{{Product._id}}" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Product Name</label>
                        <input type="text" id="name" name="name" value="{{Product.name}}" class="form-control" required>
                        {{#if errors.name}}
                        <div class="error-message">{{errors.name}}</div>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label for="description">Product Description</label>
                        <input placeholder="description" id="description" name="description" class="form-control"
                            rows="3" value="{{Product.description}}"></input>

                        {{#if errors.description}}
                        <div class="error-message">{{errors.description}}</div>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" name="category"  class="form-control categorySelect">
                           <option class="categoryName" selected value="{{Product.category._id}}">{{Product.category.name}}</option>
                            {{#each categorydata}}
                            <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}   
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="brand">Brand</label>
                        <input type="text" id="brand" name="brand" value="{{Product.brand}}" class="form-control"
                            required>
                        {{#if errors.brand}}
                        <div class="error-message">{{errors.brand}}</div>
                        {{/if}}
                    </div>

                    <div class="form-group">
                        <label for="price">Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">â‚¹</span>
                            </div>
                            <input type="number" id="price" value="{{Product.price}}" name="price" min="0" step="0.01"
                                class="form-control" required>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" id="quantity" name="quantity" min="0" value="{{Product.quantity}}"
                            class="form-control" required>
                    </div>
                    {{!-- <div class="form-group">
                        <label for="offer">Offer</label>
                        <input type="number" id="offer" value="{{Product.offer}}" name="offer" class="form-control"
                            required>
                    </div> --}}

                    <div class="form-group">
                        <p style="color: red;">{{error}}</p>
                        <label for="image">Product Image</label>

                        <input type="file" id="image" name="image" class="form-control-file" accept="image/*" multiple>

                        <div>
                            <div class="d-flex py-3 " id="imagePreviewContainer"></div>
                        </div>
                        <div>
                            {{#each images}}
                            <img id="imgurl" class="imgurl" src="/images/{{this}}" alt="" width="50px" height="50px">
                            <input id="hidden-input" class="hidden-input" type="file" style="display: none;"
                                accept="image/*">
                            <input class="form-check-input" type="checkbox" name="selectimg" id="form-check-input"
                                style="display: none;" value="{{@index}}">
                            {{/each}}

                            <p id="err" style="color: rgb(5, 173, 5);"></p>
                        </div>
                    </div>
                    <input id="productid" type="hidden" name="id" value="{{Product._id}}">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg">Confirm</button>&nbsp;&nbsp;
                        <a href="/admin/product">Go to dashboard</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
    
<script>
    const category = document.querySelector('.categoryName')
    const categorySelect = document.querySelector('.categorySelect')

    categorySelect.addEventListener('click', () => {
        category.classList.add('d-none')
    })
</script>
