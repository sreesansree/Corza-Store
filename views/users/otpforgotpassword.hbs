
    <title>Enter OTP</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
      body {
        padding-top: 60px;
        background-color: rgb(174, 174, 247);
      }
      .otp-container {
        max-width: 450px;
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 40px;
      }
      .otp-input {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        padding: 10px;
        border-radius: 5px;
        border: none;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
      }
      .otp-input:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
      }
      .otp-submit {
        background-color: #007bff;
        color: #fff;
        padding: 10px 30px;
        border-radius: 5px;
        border: none;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
      }
      .otp-submit:hover {
        background-color: #0069d9;
      }
    </style>
  </head>
  <body>
    <div class="otp-container">
       {{#if message}}
			<p class="text-center text-danger">OTP invalid</p>
			{{/if}}
      <h1>Enter OTP</h1>
      <p>Please enter the OTP sent to your Email</p>
      <form id="form" action="/forgotpassword/otp" method="post">
        <input type="text" class="form-control otp-input" name="otp" placeholder="otp">
        <button type="submit" class="btn btn-primary otp-submit">Submit</button>
      </form>
    </div>
  </body>
</html>

<script>
  const form = document.getElementById("form")
form.addEventListener(
  "focus",
  (event)=>{
    event.target.style.background = "pink";
  },
  true
);
form.addEventListener(
  "blur",
  (event)=>{
    event.target.style.background =""
  },
  true
)

</script>


