<script>
   const addToCartBtn = async (proId) => {
    try {
        const response = await fetch(`/add_to_cart?id=${proId}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
            },
        });

        let data = await response.json();

        // Handle the response based on the message received from the server
        if (data.message === 'Item alredy in cart') {
            Swal.fire({
                icon: 'info',
                title: 'ðŸ˜•',
                text: `Product already exists in Cart!`,
            });
        } else if (data.message === 'Item added to cart') {
            Swal.fire({
                icon: 'success',
                title: 'ðŸ¥³',
                text: `Added to Cart!`,
            });
        }

        console.log('added to carttt');
    } catch (error) {
        console.error(error);
    }
};





    const removeWishlist = async (id, idd) => {
        try {
            const response = await fetch(`/remove_from_wishlist?id=${id}`, {
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            let data = await response.json();
            if (data) {
                // Replace the swal() function with SweetAlert2 Swal.fire()
                Swal.fire('ðŸ¥³', `${data.message}`, 'success'); // Use the product name from the response data

                const removedElement = document.getElementById('pro_cont' + idd);
                removedElement.remove(); // Remove the element from the DOM
                // Automatically reload the page after the item is removed
                window.location.reload();
            }
        } catch (error) {
            console.error(error);
        }
    };
</script>

