<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>



<script>

    const ProName = document.getElementsByName('product_name')[0].value;

    const addToCartBtn = async (proId) => {
        try {
            const response = await fetch(`/add_to_cart?id=${proId}`, {
                method: 'GET',
                headers: {
                    'Content-Type': "application/json",
                },
            });

            let data = await response.json();

            if (data) {
                // Replace the swal() function with SweetAlert2 Swal.fire()
                Swal.fire({
                    icon: "success",
                    title: "ðŸ¥³",
                    text: `${ProName} added to Cart!`,
                });
            }
        } catch (error) {
            console.error(error);
        }
    };


    const removeFromWishlist = async (id, idd) => {
        try {
            let response = await fetch(`/remove_from_wishlist?id=${id}`, {
                headers: {
                    "Content-Type": "application/json"
                },
            });

            let data = await response.json();
            console.log(data);
            if (data) {
                // Replace the swal() function with SweetAlert2 Swal.fire()
                Swal.fire({
                    icon: "success",
                    title: "ðŸ¥³",
                    text: `${ProName} Removed from wishlist!`,
                });
                document.getElementById('pro_cont' + idd).innerHTML = '';
            }
        } catch (error) {
            console.error(error);
        }
    };



</script>

